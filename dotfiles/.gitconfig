[core]
editor = vim
autocrlf = input # linux = input, windows = true
safecrlf = false
[user]
email = lukasneubauer@seznam.cz
name = Lukáš Neubauer
[web]
browser = firefox
[push]
default = matching
[alias]
br = branch
cm = commit
co = checkout
df = diff
l = log --graph --decorate --pretty=oneline --abbrev-commit
ll = log --graph --decorate --pretty=oneline --abbrev-commit --all
mer = merge
rb = rebase
rba = rebase --abort
rbc = rebase --continue
rbi = rebase --interactive
rbs = rebase --skip
s = status
[remote "origin"]
push = HEAD
[diff]
mnemonicprefix = true
[pull]
rebase = true
[color]
ui = auto
[color "branch"]
current = yellow reverse
local = yellow
remote = green
[color "diff"]
meta = yellow bold
frag = magenta bold
old = red bold
new = green bold
[color "status"]
added = green
changed = yellow
untracked = cyan
